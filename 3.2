
import java.util.Stack;

public class StackwithMin extends Stack<Integer> {
         Stack<Integer> keepmin=new Stack<Integer>();
         
         public void push(int a){

           if(a<=min())//2->3->2->1->2->4 in keepmin: 2->2->1
        		 keepmin.push(a);
        	 
        	 super.push(a);
         }
         
         public Integer pop(){
        	 Integer b=super.pop();
        	 if(min()==b.intValue()){
        		 keepmin.pop();       		 
        	 }
        	 return b;
        		
         }
         
         
         
         public int min(){
        	 if(keepmin.isEmpty())
        		 return Integer.MAX_VALUE;
        	 return keepmin.peek();
         }
	

   
}
